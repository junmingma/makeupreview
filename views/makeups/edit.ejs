<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit <%= makeup.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/makeups/<%=makeup._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="makeup[name]" value="<%= makeup.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="makeup[image]" value="<%= makeup.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="makeup[description]" value="<%= makeup.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a href="/makeups">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>